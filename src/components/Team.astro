---
const team = [
  {
    name: "Dr. Paul Willoughby",
    role: "Veterinarian",
    bio: "Dr. Willoughby has over 15 years of experience in veterinary medicine with a special interest in internal medicine and geriatric care.",
    image: "https://images.unsplash.com/photo-1559839734-2b71ea197ec2?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1170&q=80"
  },
  {
    name: "Michael Chen",
    role: "Veterinary Technician",
    bio: "Dr. Chen specializes in orthopedic and soft tissue surgeries, bringing advanced surgical techniques to our practice.",
    image: "https://images.unsplash.com/photo-1622253692010-333f2da6031d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1064&q=80"
  }
];
---

<section id="team" class="py-16">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold text-primary mb-4">Meet Our Team</h2>
      <p class="text-lg text-gray-600 max-w-3xl mx-auto">Our dedicated team of veterinary professionals is committed to providing the highest quality care for your pets.</p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {team.map((member, index) => {
        // Alternate between accent colors for a more dynamic look
        const accentColors = ["accent1", "accent2", "accent3", "accent4"];
        const accentColor = accentColors[index % accentColors.length];
        
        return (
          <div class="bg-light rounded-lg overflow-hidden shadow-lg transition-transform hover:scale-105">
            <div class="h-64 overflow-hidden">
              <img src={member.image} alt={member.name} class="w-full h-full object-cover">
            </div>
            <div class="p-6">
              <h3 class="text-xl font-bold text-primary mb-1">{member.name}</h3>
              <p class={`text-${accentColor} font-medium mb-3`}>{member.role}</p>
              <p class="text-gray-600">{member.bio}</p>
            </div>
          </div>
        );
      })}
    </div>
  </div>
</section>