const services = [
  {
    title: "Wellness Exams",
    description: "Comprehensive check-ups to ensure your pet's ongoing health and well-being.",
    image: "https://tcah-v2-images.s3.us-east-1.amazonaws.com/4156769446_3f82ce8edd_o.jpg"
  },
  {
    title: "Vaccinations",
    description: "Protect your pet from common diseases with our vaccination programs.",
    image: "https://tcah-v2-images.s3.us-east-1.amazonaws.com/6411073983_74549d959e_o.jpg"
  },
  {
    title: "Dental Care",
    description: "Complete dental services to maintain your pet's oral health.",
    image: "https://tcah-v2-images.s3.us-east-1.amazonaws.com/5004809505_ed9e630b55_o.jpg"
  },
  {
    title: "Surgery",
    description: "Advanced surgical procedures performed with the utmost care and precision.",
