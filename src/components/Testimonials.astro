---
const testimonials = [
  {
    name: "Amanda Peterson",
    pet: "Max (Golden Retriever)",
    quote: "The team at Tega Cay Animal Hospital has been caring for our Max since he was a puppy. Their compassion and expertise are unmatched!",
    image: "https://images.unsplash.com/photo-1518717758536-85ae29035b6d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1170&q=80"
  },
  {
    name: "Robert Wilson",
    pet: "Luna (Maine Coon)",
    quote: "When Luna needed emergency surgery, Dr. Chen and his team were amazing. They explained everything clearly and took excellent care of her.",
    image: "https://images.unsplash.com/photo-1533738363-b7f9aef128ce?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1035&q=80"
  },
  {
    name: "Maria Gonzalez",
    pet: "Bella (Labrador)",
    quote: "We've been coming to Tega Cay for years. The staff remembers our Bella by name and always makes us feel like family. Highly recommend!",
    image: "https://images.unsplash.com/photo-1583511655857-d19b40a7a54e?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1169&q=80"
  }
];
---

<section id="testimonials" class="py-16 bg-white">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold text-primary mb-4">What Our Clients Say</h2>
      <p class="text-lg text-gray-600 max-w-3xl mx-auto">Hear from pet owners who trust us with the care of their beloved companions.</p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {testimonials.map((testimonial, index) => {
        // Alternate between accent colors for a more dynamic look
        const accentColors = ["accent1", "accent2", "accent3"];
        const accentColor = accentColors[index % accentColors.length];
        
        return (
          <div class="bg-accent/10 rounded-lg overflow-hidden shadow-lg p-6">
            <div class="flex items-center mb-4">
              <div class="w-16 h-16 rounded-full overflow-hidden mr-4">
                <img src={testimonial.image} alt={testimonial.name} class="w-full h-full object-cover">
              </div>
              <div>
                <h3 class="font-bold text-primary">{testimonial.name}</h3>
                <p class="text-gray-600 text-sm">{testimonial.pet}</p>
              </div>
            </div>
            <div class="mb-4">
              <svg class={`h-8 w-8 text-${accentColor} mb-2`} fill="currentColor" viewBox="0 0 24 24">
                <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
              </svg>
              <p class="text-gray-700 italic">{testimonial.quote}</p>
            </div>
            <div class="flex">
              {Array(5).fill(0).map(() => (
                <svg class="h-5 w-5 text-accent1" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>
          </div>
        );
      })}
    </div>
  </div>
</section>